<Page x:Class="PROG2500_A2_Chinook.Pages.Home_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG2500_A2_Chinook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home_Page">
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="textStyle">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Beige"/>
        </Style>
    </Page.Resources>
    <StackPanel>
        <TextBlock Text="This is the Home page" Style="{StaticResource textStyle}" FontSize="28"/>
        <TextBlock Text="Select a page to start" Style="{StaticResource textStyle}" FontSize="28"/>
    </StackPanel>
</Page>
